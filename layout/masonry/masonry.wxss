/* index.wxss */
.masonry-container {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.masonry-item {
  /* 调整宽度和间距 */
  width: calc(33.33% - 16rpx); 
  /* width: calc(50%); */
  margin-bottom: 16rpx;
  background-color: #e0e0e0;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  box-sizing: border-box;
  padding: 16rpx;
  overflow: hidden;
}

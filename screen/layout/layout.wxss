/* pages/index/index.wxss */

.swiper-container {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.custom-indicator {
  position: absolute;
  bottom: 20px;
  width: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.custom-dot {
  width: 10px;
  height: 4px;
  background-color: #ddd; /* 未激活状态下的颜色 */
  border-radius: 2px;
  margin: 0 5px;
  transition: background-color 0.3s ease-in-out;
}

.swiper-dot-active {
  background-color: #333; /* 激活状态下的颜色 */
}

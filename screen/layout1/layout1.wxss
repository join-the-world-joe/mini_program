/* pages/index/index.wxss */

.container {
  display: flex;
}

.category-scroll-view,
.product-scroll-view {
  flex: 1;
  height: 100vh;
}

.category-item,
.product-item {
  padding: 10rpx;
  border-bottom: 1rpx solid #eee;
  text-align: center;
}

.product-image {
  width: 100%;
  height: 120rpx;
  margin-top: 10rpx;
}

.product-name {
  margin-top: 5rpx;
  font-size: 14rpx;
  color: #333;
}

.product-price {
  margin-top: 5rpx;
  font-size: 12rpx;
  color: #e44d26;
}
